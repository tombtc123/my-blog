---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import logo from '../assets/logo.png';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// 格式化日期为中文格式：2025年12月17日
function formatDate(date: Date): string {
	const year = date.getFullYear();
	const month = date.getMonth() + 1;
	const day = date.getDate();
	return `${year}年${month}月${day}日`;
}
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body {
				background: var(--bg-color);
				margin: 0;
				padding: 0;
				transition: background-color 0.2s ease, color 0.2s ease;
			}
			
			/* 页眉区域 */
			.page-header {
				text-align: center;
				padding: 6rem 2rem 4rem 2rem;
				max-width: 100%;
				margin-top: 0;
			}
			
			.header-logo-title {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 0.75rem;
				margin-bottom: 1.5rem;
				text-decoration: none;
				flex-wrap: wrap;
			}
			
			.header-logo {
				height: 36px;
				width: auto;
				display: block;
				object-fit: contain;
			}
			
			.header-title {
				font-family: 'Merriweather', 'Georgia', 'Times New Roman', serif;
				font-size: 1.75rem;
				font-weight: 700;
				margin: 0;
				background-image: linear-gradient(135deg, #34d399, #3b82f6);
				background-clip: text;
				-webkit-background-clip: text;
				color: transparent;
				line-height: 1.2;
				letter-spacing: -0.02em;
				padding-bottom: 0.1em;
				display: inline-block;
			}
			
			.header-subtitle {
				font-size: 1.125rem;
				color: #888888;
				font-weight: 400;
				margin: 0;
				font-style: normal;
			}
			
			html.dark .header-subtitle {
				color: #aaaaaa;
			}
			
			/* 文章列表容器 */
			.post-list-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 2rem 8rem 2rem;
			}
			
			@media (max-width: 768px) {
				.post-list-container {
					padding-left: 1rem;
					padding-right: 1rem;
				}
			}
			
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			
			.post-item {
				margin-bottom: 4rem;
			}
			
			.post-item a {
				text-decoration: none;
				color: inherit;
				display: block;
				max-width: 100%;
			}
			
			/* 第一行：元数据 */
			.post-meta {
				font-size: 0.875rem;
				color: #999999;
				margin-bottom: 0.75rem;
				letter-spacing: 0.01em;
				transition: color 0.2s ease;
			}
			
			html.dark .post-meta {
				color: #888888;
			}
			
			/* 第二行：大标题 */
			.post-title {
				font-size: 2.25rem;
				font-weight: 700;
				color: #6366f1;
				background-image: none;
				-webkit-text-fill-color: initial;
				background-clip: border-box;
				margin: 0 0 0.5rem 0;
				line-height: 1.3;
				transition: color 0.2s ease;
				white-space: normal;
				word-wrap: break-word;
				overflow-wrap: break-word;
				max-width: 100%;
			}
			
			.post-item a:hover .post-title {
				color: #4f46e5;
			}
			
			/* 第三行：副标题/描述 */
			.post-description {
				font-size: 1rem;
				color: #666666;
				margin: 0 0 0.5rem 0;
				line-height: 1.6;
				font-style: italic;
				transition: color 0.2s ease;
				white-space: normal;
				word-wrap: break-word;
				overflow-wrap: break-word;
				max-width: 100%;
			}
			
			html.dark .post-description {
				color: #cccccc;
			}
			
			/* 响应式设计 */
			@media (max-width: 768px) {
				.page-header {
					padding: 4rem 1rem 3rem 1rem;
				}
				
				.header-logo-title {
					flex-direction: column;
					gap: 0.5rem;
				}
				
				.header-logo {
					height: 32px;
					width: auto;
				}
				
				.header-title {
					font-size: 1.5rem;
				}
				
				.header-subtitle {
					font-size: 0.9375rem;
				}
				
				.post-list-container {
					padding-left: 1rem;
					padding-right: 1rem;
					padding-bottom: 6rem;
				}
				
				.post-title {
					font-size: 1.5rem;
				}
				
				.post-description {
					line-height: 1.5;
				}
				
				.post-item {
					margin-bottom: 3rem;
				}
			}
			
			@media (max-width: 480px) {
				.page-header {
					padding: 3rem 1rem 2rem 1rem;
				}
				
				.header-logo-title {
					flex-direction: column;
					gap: 0.5rem;
				}
				
				.header-logo {
					height: 28px;
				}
				
				.header-title {
					font-size: 1.25rem;
				}
				
				.header-subtitle {
					font-size: 0.875rem;
				}
				
				.post-title {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<!-- 页眉区域 -->
		<header class="page-header">
			<div class="header-logo-title">
				<Image
					src={logo}
					alt="Tom Blog Logo"
					class="header-logo"
					width={72}
					height={72}
					loading="eager"
					fetchpriority="high"
				/>
				<h1 class="header-title">{SITE_TITLE}</h1>
			</div>
			<p class="header-subtitle">探索科技、思维与生活的边界</p>
		</header>
		
		<!-- 文章列表 -->
		<main class="post-list-container">
			<ul class="post-list">
				{
					posts.map((post) => (
						<li class="post-item">
							<a href={`/blog/${post.id}/`}>
								<div class="post-meta">
									{formatDate(post.data.pubDate)}
								</div>
								<h2 class="post-title">{post.data.title}</h2>
								<p class="post-description">{post.data.description}</p>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		
		<Footer />
	</body>
</html>
